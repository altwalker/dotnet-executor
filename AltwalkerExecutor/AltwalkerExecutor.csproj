<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <PackageId>AltWalker.Executor</PackageId>
    <TargetFrameworks>netstandard2.0;netstandard2.1</TargetFrameworks>
    <RootNamespace>Altom.AltWalker</RootNamespace>
    <IsPackable>true</IsPackable>
    <PackageVersion Condition="'$(PACKAGE_VERSION)' == ''">0.3.1-alpha</PackageVersion>
    <PackageVersion Condition="'$(PACKAGE_VERSION)' != ''">$(PACKAGE_VERSION)</PackageVersion>
    <Title> AltWalker Executor</Title>
    <Description>
Provides a programming interface for exposing and executing your C# tests with AltWalker.

To expose your tests to AltWalker, create a console application and Run the ExecutorService.
    </Description>
    <Summary>
      Execute your C# tests with AltWalker.
    </Summary>
    <Authors> Altom </Authors>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <copyright>Â© Altom</copyright>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <PackageProjectUrl>https://altwalker.github.io/altwalker/</PackageProjectUrl>
  </PropertyGroup>
  <ItemGroup>
    <None Include="..\LICENSE" Pack="true" PackagePath="" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.Server.Kestrel" Version="2.2.0" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="all" />
  </ItemGroup>
</Project>
